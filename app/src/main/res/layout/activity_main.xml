<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.iaguilarmartin.madridguide.activities.MainActivity">

    <Button
        android:id="@+id/button_activity_main_open_shops"
        android:layout_width="@dimen/activity_main_button_shops_width"
        android:layout_height="@dimen/activity_main_button_shops_height"
        android:text="@string/activity_main_button_shops_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_activity_main_open_activities"
        android:layout_width="@dimen/activity_main_button_activities_width"
        android:layout_height="@dimen/activity_main_button_activities_height"
        android:text="@string/activity_main_button_activities_text"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>
